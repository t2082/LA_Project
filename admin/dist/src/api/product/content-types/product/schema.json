{
    "kind": "collectionType",
    "collectionName": "products",
    "info": {
        "singularName": "product",
        "pluralName": "products",
        "displayName": "Product",
        "description": ""
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string"
        },
        "description": {
            "type": "text"
        },
        "price": {
            "type": "decimal"
        },
        "price_sale": {
            "type": "decimal"
        },
        "quantity": {
            "type": "integer"
        },
        "unit": {
            "type": "string"
        },
        "images": {
            "type": "media",
            "multiple": true,
            "required": false,
            "allowedTypes": [
                "images",
                "files",
                "videos",
                "audios"
            ]
        },
        "categories": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::category.category",
            "mappedBy": "products"
        },
        "user_carts": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::user-cart.user-cart",
            "inversedBy": "products"
        }
    }
}
